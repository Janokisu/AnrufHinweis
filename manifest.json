{
    "description": "__MSG_extensionDescription__",
    "manifest_version": 2,
    "name": "__MSG_extensionName__",
    "version": "0.1.0",
    "default_locale": "de",
    "icons": {
        "48": "icons/telefonliste.svg"
    },

    "applications": {
        "gecko": {
            "strict_min_version": "77.0"
        }
    },

    "background": {
        "scripts": [
           "tools.js",
           "background.js"
        ]
    },

    "options_ui": {
        "browser_style": true,
        "page": "options.html"
    },

    "browser_action": {
        "browser_style": true,
        "default_popup": "popup.html",
        "default_icon": "icons/telefonliste.svg"
    },

    "permissions": [
        "storage",
        "http://fritz.box/*",
        "menus"
    ],
    
    "optional_permissions": [
        "nativeMessaging",
        "notifications",
        "http://*/*"
    ]

}
